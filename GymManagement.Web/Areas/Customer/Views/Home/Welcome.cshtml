@{
    ViewData["Title"] = "Welcome";
}
@model GymUser

<div class="text-center">
    <h1 class="display-4">Welcome Page</h1>

    <p>Thank you for registering! Please fill out your basic information.</p>

    <form class="form-group form-control" asp-action="Update" asp-controller = "">
        <div class="row g-2">
            <div class="col-md form-group">
                <label for="fullName">Full Name</label>
                <input type="text" class="form-control" id="fullName" placeholder="Enter your full name">
            </div>


            <div class="col-md form-group">
                <label for="Contact">Contact Number</label>
                <input type="text" class="form-control" id="Contact" placeholder="Enter your contact number">
            </div>


            <div class="col-md form-group">
                <label for="age">Age</label>
                <input type="number" class="form-control" id="age" placeholder="Enter your age">
            </div>
        </div>

        <div class="row g-2">
            <div class="col-md form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" placeholder="Enter your city">
            </div>

            <div class="col-md form-group">
                <label for="Type">Select an Option</label>
                <select class="form-select" id="Type">
                    <option selected>----</option>
                    <option value="1">Full Body</option>
                    <option value="2">Upper Body</option>
                    <option value="3">Lower Body</option>
                </select>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>
