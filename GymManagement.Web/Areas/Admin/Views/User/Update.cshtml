@using GymManagement.Utility
@model GymManagement.Data.Models.GymUser


<div class="card shadow border-0 mt-4">
    <div class="card header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Update Gym Branch</h2>
            </div>
        </div>
    </div>


    <form method="post" class="form-horizontal" asp-action="Create" asp-controller="User">
        <div class="form-group p-2">
            <label asp-for=" Full_Name" class="control-label"></label>
            <input asp-for=" Full_Name" class="form-control" />
            <span asp-validation-for=" Full_Name" class="text-danger"></span>
        </div>


        <div class="form-group p-2">
            <label asp-for=" Email" class="control-label"></label>
            <input asp-for=" Email" class="form-control" />
            <span asp-validation-for=" Email" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for=" PhoneNumber" class="control-label"></label>
            <input asp-for=" PhoneNumber" class="form-control" />
            <span asp-validation-for=" PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for=" City" class="control-label"></label>
            <input asp-for=" City" class="form-control" />
            <span asp-validation-for=" City" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <select asp-for=" Gender" class="form-select">
                <option> Male </option>
                <option> Female </option>
            </select>
            <span asp-validation-for=" Gender" class="text-danger"></span>
        </div>


        <div class="form-group p-2">
            <label asp-for=" Age" class="control-label"></label>
            <input asp-for=" Age" class="form-control" />
            <span asp-validation-for=" Age" class="text-danger"></span>
        </div>


        <div class="form-group p-2">
            <label asp-for=" Weight" class="control-label"></label>
            <input asp-for=" Weight" class="form-control" />
            <span asp-validation-for=" Weight" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for=" Height" class="control-label"></label>
            <input asp-for=" Height" class="form-control" />
            <span asp-validation-for=" Height" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <label asp-for=" Membership" class="control-label"></label>
            <select asp-for=" Membership" class="form-control">
                <option disabled selected>--Select Option-- </option>
                <option> True </option>
                <option> False</option>
            </select>
            <span asp-validation-for=" Membership" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <select asp-for=" Type" class="form-select">
                <option> FullBody </option>
                <option> UpperBody </option>
                <option> LowerBody </option>
            </select>
            <span asp-validation-for=" Type" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <select asp-for=" Role" class="form-select">
                <option> Trainer </option>
                <option> Customer </option>
                <option> Member </option>
                <option> Company </option>
                <option> Employee </option>
                @if (User.IsInRole(Roles.Role_Admin))
                {
                    <option> Admin </option>
                }

            </select>
        </div>


        <div class="form-group p-2">
            <input type="submit" asp-action="Update" asp-controller="User" class="btn btn-primary" value="Update"/>


        </div>
    </form>
</div>